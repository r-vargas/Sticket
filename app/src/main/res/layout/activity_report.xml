<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.roberto.sticket.reportActivity"
    android:background="@drawable/report_problem">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <LinearLayout
            android:paddingTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/internet"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:onClick="onClick"
                android:clickable="true"
                android:tag="1"
                android:layout_weight="1"
                />

            <Button
                android:layout_width="110dp"
                android:id="@+id/plumbing"
                android:layout_height="110dp"
                android:onClick="onClick"
                android:clickable="true"
                android:tag="2"
                android:layout_weight="1"
                />

            <Button

                android:layout_width="110dp"
                android:layout_height="110dp"
                android:id="@+id/building"
                android:onClick="onClick"
                android:clickable="true"
                android:tag="3"
                android:layout_weight="1"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button

                android:id="@+id/lighting"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:onClick="onClick"
                android:clickable="true"
                android:tag="4"
                android:layout_weight="1"
                />

            <Button
                android:id="@+id/temperature"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:onClick="onClick"
                android:clickable="true"
                android:tag="5"
                android:layout_weight="1"
                />

            <Button
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:id="@+id/wc"
                android:onClick="onClick"
                android:clickable="true"
                android:tag="6"
                android:layout_weight="1"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/entryways"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:onClick="onClick"
                android:clickable="true"
                android:tag="7"
                android:layout_weight="1"
                />
            <Button
                android:id="@+id/electrical"
                android:layout_width="110dp"
                android:layout_height="150dp"
                android:onClick="onClick"
                android:clickable="true"
                android:tag="8"
                android:layout_weight="1"
                />


            <Button
                android:id="@+id/janitorial"
                android:layout_width="110dp"
                android:layout_height="150dp"
                android:onClick="onClick"
                android:clickable="true"
                android:tag="9"
                android:layout_weight="1"
                />


        </LinearLayout>

    </LinearLayout>



</RelativeLayout>
